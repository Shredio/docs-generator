{
	"name": "shredio/docs-generator",
	"type": "library",
	"license": "MIT",
	"require": {
		"php": ">=8.3",
		"nette/utils": "^4.0",
		"symfony/console": "^7.0",
		"symfony/http-kernel": "^7.0",
		"symfony/dependency-injection": "^7.0",
		"nette/php-generator": "^4.1",
		"symfony/filesystem": "^7.2"
	},
	"autoload": {
		"psr-4": {
			"Shredio\\DocsGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --memory-limit=-1",
		"test": "vendor/bin/phpunit tests"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.2",
		"symfony/config": "^7.3"
	}
}
